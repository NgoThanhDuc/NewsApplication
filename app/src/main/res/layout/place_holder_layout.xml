<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_10dp"
        android:layout_marginTop="@dimen/dms_20dp"
        android:layout_marginRight="@dimen/dms_10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="@dimen/dms_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dms_10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dms_10dp"
                android:layout_weight="1"
                android:background="@color/placeholder"
                android:textSize="@dimen/dm_16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/placeholder"
                android:textSize="@dimen/dm_20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dms_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dms_10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dms_100dp"
                android:background="@color/placeholder"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_10dp"
        android:layout_marginTop="@dimen/dms_10dp"
        android:layout_marginRight="@dimen/dms_10dp"
        android:layout_marginBottom="@dimen/dms_20dp"
        android:background="@color/placeholder"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="@dimen/dms_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textSize="@dimen/dm_14sp" />

        <LinearLayout
            android:id="@+id/linearImageSave"
            android:layout_width="@dimen/dms_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dms_15dp"
                android:background="@color/placeholder"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_1dp"
        android:layout_marginLeft="@dimen/dms_10dp"
        android:layout_marginRight="@dimen/dms_10dp"
        android:layout_marginBottom="@dimen/dms_10dp"
        android:background="@color/placeholder" />
</LinearLayout>
