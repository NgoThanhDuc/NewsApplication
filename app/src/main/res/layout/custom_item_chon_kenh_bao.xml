<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_selector"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageNews"
        android:layout_width="@dimen/dms_76dp"
        android:layout_height="@dimen/dms_76dp"
        android:layout_marginTop="@dimen/dms_15dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_nameNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_5dp"
        android:layout_marginBottom="@dimen/dms_15dp"
        android:gravity="center"
        android:textSize="@dimen/dm_16sp"
        android:textStyle="bold" />


</LinearLayout>